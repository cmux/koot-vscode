{
    "name": "koot-helper",
    "displayName": "koot-helper",
    "description": "Features to help you developing Koot.js project",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*",
        "workspaceContains:koot.config.js"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.kootNewComponent",
                "title": "新建 React 组件 (适用于 Koot.js)"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "extension.kootNewComponent",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.7.4",
        "@types/vscode": "^1.38.0",
        "eslint": "^6.3.0",
        "eslint-config-koot": "^1.3.0",
        "glob": "^7.1.4",
        "husky": "^3.0.5",
        "lint-staged": "^9.2.5",
        "mocha": "^6.2.0",
        "prettier": "^1.18.2",
        "prettier-eslint": "^9.0.0",
        "typescript": "^3.6.3",
        "vscode-test": "^1.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,cjs,mjs,ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{json,md,css,less,sass,scss}": [
            "prettier --write",
            "git add"
        ]
    }
}
